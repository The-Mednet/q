# SMTP Relay Service Configuration Example
# Copy this file to .env and update with your actual values

# SMTP Server Configuration
SMTP_HOST=0.0.0.0
SMTP_PORT=2525
SMTP_READ_TIMEOUT=300s
SMTP_WRITE_TIMEOUT=300s
SMTP_MAX_SIZE=26214400

# SMTP Authentication (REQUIRED for security)
SMTP_AUTH_USERNAME=your-smtp-username
SMTP_AUTH_PASSWORD=your-secure-password-here

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=email_relay
MYSQL_USERNAME=relay_user
MYSQL_PASSWORD=your-mysql-password
MYSQL_MAX_OPEN_CONNS=25
MYSQL_MAX_IDLE_CONNS=5
MYSQL_CONN_MAX_LIFETIME=5m

# Webhook Configuration
WEBHOOK_ENABLED=true
WEBHOOK_URL=https://your-app.com/webhook
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5s
WEBHOOK_TIMEOUT=30s

# Queue Processing
QUEUE_BATCH_SIZE=10
QUEUE_PROCESS_INTERVAL=10s
QUEUE_DAILY_RATE_LIMIT=2000

# Web UI Configuration
SERVER_WEBUI_PORT=8080

# LLM Configuration (Optional)
LLM_ENABLED=false
LLM_PROVIDER=openai
LLM_API_KEY=your-openai-api-key
LLM_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7

# Blaster API (Variable Replacement)
BLASTER_BASE_URL=http://localhost:3034
BLASTER_API_KEY=your-blaster-api-key

# Google Workspace Service Account Paths
# Store service account JSON files securely, never commit them
GMAIL_SERVICE_ACCOUNT_JOINMEDNET=/secure/path/to/joinmednet-service-account.json
GMAIL_SERVICE_ACCOUNT_MEDNETMAIL=/secure/path/to/mednetmail-service-account.json

# Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mail.joinmednet.org
MAILGUN_BASE_URL=https://api.mailgun.net/v3

# Workspace Configuration File
WORKSPACE_CONFIG_FILE=workspace.json

# Environment
ENVIRONMENT=development
DEBUG=false